<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectBoothtype"
    android:background="@drawable/my_bg_anim"
   >


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="0dp"
        >

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:background="@drawable/background9"
            android:layout_marginTop="160dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="302dp"
            android:layout_height="69dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Choose Booth Type"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_selectboothtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar3"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="@color/white" />

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="22dp"
            android:id="@+id/card_view"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewpremium"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                app:cardCornerRadius="25dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/select" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Premium"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/premium"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/select1"
                android:elevation="20dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="\?"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewgeneral"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="25dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/select" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="General"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/general"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/select1"
                android:elevation="20dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="\?"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </FrameLayout>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>